<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Welcome to dragon travel</title>
</head>

<body>
    {{>navbar}}
    <div class="container">
        <h1>Welcome please fill this form</h1>
        <form class="row g-3" action="/register" method="POST">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="inputName" class="form-label">First name</label>
                    <input type="text" class="form-control" id="firstname" placeholder="Enter First name"
                        aria-label="First name" name="firstname" required>
                </div>
                <div class="col-md-6">
                    <label for="inputName" class="form-label">Last name</label>
                    <input type="text" class="form-control" id="lastname" placeholder="Enter Last name"
                        aria-label="Last name" name="lastname" required>
                </div>
            </div>
            <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Email</label>
                <input type="email" placeholder="Enter your Email" class="form-control" id="email" name="email"
                    required>
                <div id="validationServer03Feedback" class="invalid-feedback">
                    Please Enter a valid Email
                </div>
            </div>
            <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Password</label>
                <input type="password" placeholder="Enter your password" class="form-control" id="password"
                    name="password" required>
                <div id="validationServer03Feedback" class="invalid-feedback">
                    Your password must be 8-20 characeter long
                </div>
            </div>
            <div class="col-12">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" placeholder="1234 Main St" name="address" required>
            </div>
            <div class="col-12">
                <label for="address2" class="form-label">Address 2</label>
                <input type="text" class="form-control" id="address2" placeholder="Apartment, studio, or floor"
                    name="address2">
            </div>
            <div class="col-md-6">
                <label for="inputCity" class="form-label">City</label>
                <input type="text" class="form-control" id="city" placeholder="Enter your city name" name="city"
                    required>
            </div>
            <div class="col-md-4">
                <label for="inputState" class="form-label">Country</label>
                <select id="country" class="form-select" name="country" required>
                    <option selected>India</option>
                    <option selected>Usa</option>
                    <option selected>pakistan</option>
                    <option selected>Bangladesh</option>
                    <option selected>Sri-lanka</option>
                    <option selected>Japan</option>
                    <option selected>China</option>
                    <option selected>Russia</option>
                    <option selected>Canada</option>
                    <option selected>Afghanistan</option>
                    <option selected>Indonesia</option>
                    <option selected>Philippines</option>
                    <option selected>United Kingdom</option>
                    <option selected>Thailand</option>
                    <option selected>Another.</option>
                    <option selected>Choose...</option>
                </select>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck" required>
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
                <div class="alert-danger fade" id="alertmsg" role="alert">
                    <strong>Password not valid</strong> Your password must be 8-20 characeter long
                </div>
            </div>
            <div class="col-12">
                <button type="submit" id="submit" class="btn btn-primary mb-5" value="register">Sign in</button>
            </div>
        </form>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
    <script>
        'use strict';
        const password = document.getElementById('password');
        const alertmsg = document.getElementById("alertmsg");
        var passwordcheak = true;
        password.addEventListener('blur', () => {
            let regexpassword = /^[\w+\W+\d+\D+\s+\S+]{8,20}$/
            let passwordvalue = password.value;
            if (regexpassword.test(passwordvalue)) {
                password.classList.remove('is-invalid');
                passwordcheak = false;
                alertmsg.classList.remove("show");
            }
            else {
                password.classList.add("is-invalid");
                passwordcheak = true;
            }
        });

        const email = document.getElementById('email');
        email.addEventListener('blur', () => {
            let regexemail = /([\w+\W+\d+\D+\s+\S+]+)@([\w+\W+\d+\D+\s+\S+]+)\.([a-zA-Z]){2,7}$/
            let emailvalue = email.value;
            if (regexemail.test(emailvalue)) {
                email.classList.remove('is-invalid');
            }
            else {
                email.classList.add("is-invalid");
            }
        });

        const submit = document.getElementById("submit");
        submit.addEventListener("click", (e) => {
            if (passwordcheak) {
                e.preventDefault();
                console.log("your password is not valid");
                alertmsg.classList.add("show");
            }
        });
    </script>
</body>

</html>